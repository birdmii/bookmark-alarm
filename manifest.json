{
    "name": "Bookmarkalarm",
    "version": "1.1",
    "description": "Bookmarkalarm helps you set alarm to each bookmark to look at it at the proper time",
    "permissions": [
        "bookmarks",
        "tabs",
        "alarms",
        "notifications",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Bookmarkalarm",
        "default_popup": "popup.html"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'", 
    "icons": {
        "16":"assets/bookmarkalarm16.png",
        "32":"assets/bookmarkalarm32.png",
        "48":"assets/bookmarkalarm48.png",
        "128":"assets/bookmarkalarm128.png"
    }
}